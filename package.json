{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^5.16.0",
    "@idearium/eslint-config": "^3.0.1",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1"
  }
}
