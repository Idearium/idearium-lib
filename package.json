{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,json,css,md}": [
            "prettier-eslint --write",
            "git add"
        ],
        "yarn.lock": [
            "git rm --cached"
        ]
    },
    "devDependencies": {
        "@idearium/eslint-config": "^3.0.1",
        "babel-eslint": "^10.0.2",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-eslint-comments": "^3.1.2",
        "husky": "^2.5.0",
        "jest": "^24.8.0",
        "lint-staged": "^8.2.1",
        "prettier-eslint-cli": "^5.0.0"
    }
}
