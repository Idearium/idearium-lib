{
  "name": "idearium-lib",
  "version": "1.0.0",
  "description": "A Node.js shared library for Idearium applications.",
  "main": "lib/index.js",
  "repository": "git@github.com:idearium/idearium-lib.git",
  "author": "Allan Chau <allan.chau@icloud.com>",
  "license": "MIT",
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "projects": [
      {
        "displayName": "test"
      },
      {
        "runner": "jest-runner-eslint",
        "displayName": "lint",
        "testMatch": [
          "<rootDir>/lib/**/*.js"
        ]
      }
    ]
  },
  "scripts": {
    "build": "NODE_ENV=build rollup -c",
    "report-coverage": "codecov",
    "test-lib": "jest",
    "test": "npm-run-all build test-lib"
  },
  "devDependencies": {
    "@idearium/eslint-config": "^2.1.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "codecov": "^3.0.2",
    "eslint-plugin-jest": "^21.12.2",
    "jest": "^23.0.1",
    "jest-runner-eslint": "^0.6.0",
    "npm-run-all": "^4.1.3",
    "rollup": "^0.59.2",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.0.3"
  }
}
