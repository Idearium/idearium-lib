    "jest-runner-eslint": "^0.6.0",
    "mongoose": "^5.1.3",
    "npm-run-all": "^4.1.3",
    "shelljs": "^0.8.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "nconf": "^0.10.0"
